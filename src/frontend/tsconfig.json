{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
	"rootDir": "../",
    "lib": ["DOM", "ESNext"],
    "types": [
		"node",
		"vite/client"
	],
	"experimentalDecorators": true,
	"paths": {
		"@shared/*": ["../shared/*"]
	}
  },
  "include": ["./dev/src/typescript/", "../shared/"]
}
