generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// -------------------------------------------------------------------------------------------- //

model User {
  id        Int         @id @default(autoincrement())
  username  String      @unique
  email     String      @unique
  password  String
  avatar    String      @default("http://localhost:8181/static/public/avatarDefault.webp")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sentRequests      Friendship[]  @relation("requesterFriendships")
  receivedRequests  Friendship[]  @relation("receiverFriendships")
  
  matchesWons       Match[]   @relation("matchWinner")
  matchesLoses      Match[]   @relation("matchLoser")

  tournamentsCreated       Tournament[]     @relation("tournamentCreator")
  tournamentParticipations TournamentParticipant[]
}

// -------------------------------------------------------------------------------------------- //

model Friendship {
  id          Int       @id @default(autoincrement())
  status      String    @default("PENDING")

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  requester   User    @relation("requesterFriendships", fields: [requesterId], references: [id], onDelete: Cascade)
  requesterId Int

  receiver    User      @relation("receiverFriendships", fields: [receiverId], references: [id], onDelete: Cascade)
  receiverId  Int

  @@unique([requesterId, receiverId])
}

// -------------------------------------------------------------------------------------------- //

model Match {
  id          Int           @id @default(autoincrement())

  createdAt   DateTime      @default(now())

  winner      User?    @relation("matchWinner", fields: [winnerId], references: [id], onDelete: SetNull)
  winnerId    Int?
  winnerLevel String?  // "Guest_XXX" or "AI_LEVEL" if winnerId is null

  loserId     Int?
  loser       User?    @relation("matchLoser", fields: [loserId], references: [id], onDelete: SetNull)
  loserLevel  String?

  scoreWinner Int     @default(0)
  scoreLoser  Int     @default(0)
  duration    Int     @default(0)

  tournament   Tournament? @relation(fields: [tournamentId], references: [id], onDelete: Cascade)
  tournamentId Int?
}
// -------------------------------------------------------------------------------------------- //

model Tournament {
  id          Int       @id @default(autoincrement())
  title       String

  state       String    @default("INGAME")

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  creator     User      @relation("tournamentCreator", fields: [creatorId], references: [id], onDelete: Cascade)
  creatorId   Int

  participants TournamentParticipant[]
  matches      Match[]
}
// -------------------------------------------------------------------------------------------- //

model TournamentParticipant {
  id            Int       @id @default(autoincrement())
  alias         String    // user alias

  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        Int

  finalRank     Int?

  tournament    Tournament @relation(fields: [tournamentId], references: [id], onDelete: Cascade)
  tournamentId  Int

  @@unique([userId, tournamentId]) // no duplicate user
  @@unique([tournamentId, alias])  // no duplicate alias
}
