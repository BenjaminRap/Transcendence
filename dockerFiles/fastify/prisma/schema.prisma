generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum FriendshipStatus {
  PENDING
  ACCEPTED
  BLOCKED
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  avatar    String   @default("https://i.pravatar.cc/150?img=7")

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  sentRequests      Friendship[]  @relation("requesterFriendships")
  receivedRequests  Friendship[]  @relation("receiverFriendships")
}

model Friendship {
  id          Int               @id @default(autoincrement())
  requesterId Int
  receiverId  Int
  status      FriendshipStatus  @default(PENDING)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  requester User      @relation("requesterFriendships", fields: [requesterId], references: [id])
  receiver  User      @relation("receiverFriendships", fields: [receiverId], references: [id])
  
  @@unique([requesterId, receiverId])
}
