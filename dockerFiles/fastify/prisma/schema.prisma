generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ------------------------------------ ENUMS ------------------------------------------ //

enum FriendshipStatus {
  PENDING
  ACCEPTED
  DECLINED
}

enum MatchStatus {
  IN_PROGRESS
  FINISHED
  CANCELLED
}

enum TournamentStatus {
  ONGOING
  FINISHED
  CANCELLED
}

// ------------------------------------ TABLES ----------------------------------------- //

model User {
  id        Int         @id @default(autoincrement())
  username  String      @unique
  email     String      @unique
  password  String

  avatar    String      @default("https://localhost:8080/api/static/public/avatarDefault.webp")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sentRequests      Friendship[]  @relation("requesterFriendships")
  receivedRequests  Friendship[]  @relation("receiverFriendships")
  
  matchesWons       Match[]   @relation("matchWinner")
  matchesLoses      Match[]   @relation("matchLoser")

  matchesAsPlayer1  Match[]   @relation("Player1")
  matchesAsPlayer2  Match[]   @relation("Player2")

  tournamentsCreated       Tournament[]     @relation("tournamentCreator")
  tournamentParticipations TournamentParticipant[]
}

// -------------------------------------------------------------------------------------------- //

model Friendship {
  id          Int       @id @default(autoincrement())
  status      FriendshipStatus @default(PENDING)

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  requester   User    @relation("requesterFriendships", fields: [requesterId], references: [id], onDelete: Cascade)
  requesterId Int

  receiver    User      @relation("receiverFriendships", fields: [receiverId], references: [id], onDelete: Cascade)
  receiverId  Int

  @@unique([requesterId, receiverId])
}

// -------------------------------------------------------------------------------------------- //

model Match {
  id          Int       @id @default(autoincrement())
  
  status      MatchStatus  @default(IN_PROGRESS)

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  player1Id         Int?
  player1           User?     @relation("Player1", fields: [player1Id], references: [id], onDelete: SetNull)
  player1GuestName  String

  player2Id         Int?
  player2           User?     @relation("Player2", fields: [player2Id], references: [id], onDelete: SetNull)
  player2GuestName  String

  winnerId    Int?
  winner      User?    @relation("matchWinner", fields: [winnerId], references: [id], onDelete: SetNull)
  winnerGuestName String

  loserId     Int?
  loser       User?    @relation("matchLoser", fields: [loserId], references: [id], onDelete: SetNull)
  loserGuestName  String

  scoreWinner Int     @default(0)
  scoreLoser  Int     @default(0)
  duration    Int     @default(0)

  tournament   Tournament? @relation(fields: [tournamentId], references: [id], onDelete: Cascade)
  tournamentId Int?
  
  round        Int?    @default(1)
  matchOrder   Int?    @default(0)
}

// -------------------------------------------------------------------------------------------- //

model Tournament {
  id              Int       @id @default(autoincrement())

  title           String	@unique
  
  status          TournamentStatus  @default(ONGOING)

  creatorId       Int?
  creatorGuestName String?
  creator         User?     @relation("tournamentCreator", fields: [creatorId], references: [id], onDelete: SetNull)

  participants    TournamentParticipant[]
  matches         Match[]

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

// -------------------------------------------------------------------------------------------- //

model TournamentParticipant {
  id            Int       @id @default(autoincrement())

  alias         String
  user          User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  userId        Int?
  guestName     String?

  finalRank     Int?

  tournamentId  Int
  tournament    Tournament @relation(fields: [tournamentId], references: [id], onDelete: Cascade)

  @@unique([userId, tournamentId])
  @@unique([alias, tournamentId])
  @@unique([guestName, tournamentId])
}