generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// -------------------------------------------------------------------------------------------- //

model User {
  id        Int         @id @default(autoincrement())
  username  String      @unique
  email     String      @unique
  password  String
  avatar    String      @default("http://localhost:8181/static/public/avatarDefault.webp")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sentRequests      Friendship[]  @relation("requesterFriendships")
  receivedRequests  Friendship[]  @relation("receiverFriendships")
  
  matchesWons       Match[]   @relation("matchWinner")
  matchesLoses      Match[]   @relation("matchLoser")

  matchesAsPlayer1  Match[]   @relation("Player1")
  matchesAsPlayer2  Match[]   @relation("Player2")

  tournamentsCreated       Tournament[]     @relation("tournamentCreator")
  tournamentParticipations TournamentParticipant[]
}

// -------------------------------------------------------------------------------------------- //

model Friendship {
  id          Int       @id @default(autoincrement())
  status      String    @default("PENDING")

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  requester   User    @relation("requesterFriendships", fields: [requesterId], references: [id], onDelete: Cascade)
  requesterId Int

  receiver    User      @relation("receiverFriendships", fields: [receiverId], references: [id], onDelete: Cascade)
  receiverId  Int

  @@unique([requesterId, receiverId])
}

// -------------------------------------------------------------------------------------------- //

model Match {
  id          Int       @id @default(autoincrement())
  
  // Nouveau champ pour gérer le flux : IN_PROGRESS (en cours), FINISHED (terminé)
  status      String    @default("IN_PROGRESS")

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // --- DEFINITION DES JOUEURS (Au moment de la création du match) ---

  // Joueur 1 (Soit un User ID, soit un niveau/alias IA/Guest)
  player1Id         Int?
  player1           User?     @relation("Player1", fields: [player1Id], references: [id], onDelete: SetNull)
  player1Level      String?

  // Joueur 2
  player2Id         Int?
  player2           User?     @relation("Player2", fields: [player2Id], references: [id], onDelete: SetNull)
  player2Level      String?


  // --- RESULTATS (Remplis uniquement quand status = FINISHED) ---

  // Le gagnant doit correspondre logiciellement à player1 ou player2
  winnerId    Int?
  winner      User?    @relation("matchWinner", fields: [winnerId], references: [id], onDelete: SetNull)
  winnerLevel String?

  loserId     Int?
  loser       User?    @relation("matchLoser", fields: [loserId], references: [id], onDelete: SetNull)
  loserLevel  String?

  scoreWinner Int     @default(0)
  scoreLoser  Int     @default(0)
  duration    Int     @default(0) // En secondes a calculer entre le temps de createdAt et le moment ou on enregistre le resultat

  tournament   Tournament? @relation(fields: [tournamentId], references: [id], onDelete: Cascade)
  tournamentId Int?
}

// -------------------------------------------------------------------------------------------- //

model Tournament {
  id          Int       @id @default(autoincrement())
  title       String

  state       String    @default("INGAME")

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  creatorId   Int?
  creator     User?      @relation("tournamentCreator", fields: [creatorId], references: [id], onDelete: SetNull)

  participants TournamentParticipant[]
  matches      Match[]
}

// -------------------------------------------------------------------------------------------- //

model TournamentParticipant {
  id            Int       @id @default(autoincrement())
  alias         String

  user          User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  userId        Int?

  finalRank     Int?

  tournamentId  Int
  tournament    Tournament @relation(fields: [tournamentId], references: [id], onDelete: Cascade)

  @@unique([userId, tournamentId])
  @@unique([tournamentId, alias])
}
